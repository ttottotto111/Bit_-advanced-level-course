<Window x:Class="_1117.Window1_SlidProgress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1117"
        mc:Ignorable="d"
        Title="Window1_SlidProgress" Height="300" Width="350">
    <StackPanel>
        <ProgressBar Name="prog" Maximum="100" Minimum="0" Height="25" Width="300" HorizontalAlignment="Left" Margin="20"/>
        <Slider Name="slider1" Maximum="100" Minimum="0" Height="25" Width="300" HorizontalAlignment="Left" Margin="20" ValueChanged="Slider_ValueChanged" />
    </StackPanel>
</Window>
